{
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "emcaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-case-declarations": "off",
    "no-console": "off",
    "default-case": "warn",
    "no-useless-return": "warn",
    "prefer-const": "warn",
    "no-self-compare": "error",
    "no-var": "error",
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "warn",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-unused-vars": "off",
    "keyword-spacing": [
      "warn"
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-extra-parens": [
      "warn",
      "all",
      {
        "nestedBinaryExpressions": false,
        "ignoreJSX": "multi-line"
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ]
  }
}
