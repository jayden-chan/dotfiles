{
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "emcaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-case-declarations": "off",
    "no-console": "off",
    "default-case": "warn",
    "no-useless-return": "warn",
    "prefer-const": "warn",
    "no-self-compare": "error",
    "no-var": "error",
    "indent": "off",
    "quotes": "off",
    "semi": "off",
    "no-unused-vars": "off",
    "keyword-spacing": "off",
    "comma-dangle": "off",
    "no-cond-assign": ["error", "always"],
    "no-extra-parens": "off",
    "max-len": "off"
  }
}
