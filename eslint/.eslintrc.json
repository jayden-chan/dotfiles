{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "warn",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false
      }
    ],
    "keyword-spacing": [
      "warn"
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ],
    "no-case-declarations": "off",
    "no-console": "off"
  }
}
