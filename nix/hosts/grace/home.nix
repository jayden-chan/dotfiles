{ lib, ... }:

let
  fingerprint = {
    # BenQ ZOWIE XL LCD
    "DP-2" = "";
    # LG Electronics LG ULTRAGEAR
    "HDMI-0" = "";
  };

  main-config = {
    "DP-2" = {
      primary = true;
      enable = true;

      crtc = 0;
      mode = "1920x1080";
      position = "1920x0";
      rate = "240.00";
    };
    "HDMI-0" = {
      enable = true;

      crtc = 0;
      mode = "1920x1080";
      position = "0x0";
      rate = "144.00";
    };
  };
in
{
  imports = [ ../../home/general.nix ];

  home.stateVersion = "24.05";

  programs.autorandr.profiles."00-main" = {
    inherit fingerprint;
    config = main-config;
  };

  programs.autorandr.profiles."99-stretched" = {
    inherit fingerprint;
    config = lib.recursiveUpdate main-config {
      "DP-2" = {
        mode = "1280x1024";
      };
    };

    hooks.postswitch = ''
      killall picom
    '';
  };
}
