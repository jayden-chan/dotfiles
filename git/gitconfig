[push]
    default = simple

[init]
    defaultBranch = main

[commit]
    gpgsign = true
    verbose = true
    template = ~/.config/dotfiles/git/git-commit.txt

[tag]
    gpgsign = true

[gpg]
    format = ssh

[gpg.ssh]
    allowedSignersFile = ~/.config/dotfiles/ssh/allowed_signers

[core]
    editor = nvim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.config/dotfiles/git/gitignore
    abbrev = 8
    pager = delta

[pull]
	rebase = true

[diff]
    colorMoved = default

[interactive]
    diffFilter = delta --color-only --features=interactive --true-color=always

[delta]
    features = decorations
    side-by-side = true
    syntax-theme = ansi
    plus-style = syntax auto
    minus-style = syntax auto
    paging = always

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = bold red box ul
    hunk-header-decoration-style = cyan box ul
